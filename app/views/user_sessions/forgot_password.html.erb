<h1>Forgot your password?</h1>
<p>Helpdesk will send password reset instructions to the email address associated with your account.</p>
<% form_tag reset_password_user_sessions_path, :method => :get do %>
  <p>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  </p>
  <p>
  <%= submit_tag "Submit" %>
  </p>
<% end %>
