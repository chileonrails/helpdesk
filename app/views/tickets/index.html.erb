<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Body</th>
    <th>Status</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.subject %></td>
    <td><%= ticket.body %></td>
    <td><%= ticket.status.name unless ticket.status.nil? %></td>
    <td><%= link_to 'Comments', ticket_comments_path(ticket) %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ticket', new_ticket_path %>
